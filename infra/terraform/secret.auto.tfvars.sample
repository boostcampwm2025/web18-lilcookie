# --- Authentik 접속 정보 ---
# .env.development.local의 AUTHENTIK_BOOTSTRAP_TOKEN 값
authentik_token = "YOUR_AUTHENTIK_BOOTSTRAP_TOKEN"

# Authentik 서버 주소
authentik_url = "https://auth.localhost"


# --- 테스트용 사용자 계정 정보 (test_users.tf 매핑) ---
test_user_username = "testuser"
test_user_name     = "Test User"
test_user_email    = "testuser@example.com"
test_user_password = "YOUR_SECURE_PASSWORD"
test_user_team     = "web18"


# --- OAuth2 Provider 설정 (oauth.tf 매핑) ---
oauth_client_id  = "teamstash-client"
app_redirect_uri = "https://app.localhost/auth/callback"

allowed_redirect_uris = [
  { matching_mode = "strict", url = "https://app.localhost/auth/callback" },
  { matching_mode = "strict", url = "https://app.insomnia.rest/oauth/redirect" },
  { matching_mode = "strict", url = "https://YOUR_CHROME_EXTENSION_ID.chromiumapp.org/" }
]

# Post-logout redirect 허용 호스트 목록
post_logout_allowed_hosts = [
  "app.localhost",
  "insomnia.rest",
  "app.insomnia.rest",
  "YOUR_CHROME_EXTENSION_ID.chromiumapp.org"
]
