# 서버 설정
NODE_ENV=development
PORT=3000

# 데이터베이스 설정
DATABASE_URL="file:./data/team_stash.db"

# Authentik OIDC 설정
AUTHENTIK_ISSUER=https://auth.localhost/application/o/teamstash/
AUTHENTIK_AUDIENCE=teamstash-client
AUTHENTIK_JWKS_URL=https://auth.localhost/application/o/teamstash/jwks/

# Authentik Admin API 설정 (OAuth App 동적 생성용)
# 개발 환경: http://localhost:9000/api/v3 (Docker 포트 직접 접근, TLS 문제 회피)
# 운영 환경: https://auth.yourdomain.com/api/v3
AUTHENTIK_ADMIN_URL=http://localhost:9000/api/v3
AUTHENTIK_ADMIN_TOKEN=your_authentik_admin_token
AUTHENTIK_AUTHORIZATION_FLOW_SLUG=default-provider-authorization-implicit-consent
AUTHENTIK_INVALIDATION_FLOW_SLUG=default-provider-invalidation-flow

# 개발 환경에서 Disable TLS verification: self-signed TLS 문제 해결
# 없으면 OIDC 가드에서 막힘
NODE_TLS_REJECT_UNAUTHORIZED=0

# Clova Studio AI 설정
CLOVA_STUDIO_API_URL=https://clovastudio.stream.ntruss.com/v1/chat-completions/HCX-003
CLOVA_STUDIO_API_KEY=your_clova_studio_api_key
AI_PASSWORD=your_ai_password

# Notification 설정
NOTIFICATION_ENABLED=true
