# 서버 설정
NODE_ENV=development
PORT=3000

# 데이터베이스 설정
DATABASE_URL="file:./data/team_stash.db"

# Authentik OIDC 설정
AUTHENTIK_ISSUER=https://auth.localhost/application/o/teamstash/
AUTHENTIK_AUDIENCE=teamstash-client
AUTHENTIK_JWKS_URL=https://auth.localhost/application/o/teamstash/jwks/

# 개발 환경에서 Disable TLS verification: self-signed TLS 문제 해결
# 없으면 OIDC 가드에서 막힘
NODE_TLS_REJECT_UNAUTHORIZED=0

# Clova Studio AI 설정
CLOVA_STUDIO_API_URL=https://clovastudio.stream.ntruss.com/v1/chat-completions/HCX-003
CLOVA_STUDIO_API_KEY=your_clova_studio_api_key
AI_PASSWORD=your_ai_password

# Notification 설정
NOTIFICATION_ENABLED=true
