generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// 폴더 테이블
model Folder {
  folderId       String    @id @map("folder_id")
  teamId         String    @map("team_id")
  folderName     String    @map("folder_name")
  parentFolderId String?   @map("parent_folder_id")
  createdAt      String    @map("created_at")
  createdBy      String    @map("created_by")

  // 관계 설정
  parentFolder   Folder?   @relation("FolderHierarchy", fields: [parentFolderId], references: [folderId], onDelete: Cascade)
  subfolders     Folder[]  @relation("FolderHierarchy")
  links          Link[]

  @@index([teamId])
  @@index([parentFolderId])
  @@map("folders")
}

// 링크 테이블
model Link {
  linkId    String  @id @map("link_id")
  teamId    String  @map("team_id")
  url       String
  title     String
  tags      String  // JSON 문자열로 저장
  summary   String
  createdAt String  @map("created_at")
  createdBy String  @map("created_by")
  folderId  String? @map("folder_id")

  // 관계 설정
  folder    Folder? @relation(fields: [folderId], references: [folderId], onDelete: SetNull)

  @@index([teamId])
  @@index([createdAt])
  @@index([folderId])
  @@map("links")
}

// 회원 테이블
model User {
  id                   Int             @id @default(autoincrement())
  uuid                 String          @unique @map("uuid")
  email                String          @unique
  nickname             String
  passwordHash         String          @map("password_hash")
  createdAt            DateTime        @default(now()) @map("created_at")
  termsOfService       Boolean         @map("terms_of_service")
  privacyPolicy        Boolean         @map("privacy_policy")
  marketingConsent     Boolean         @map("marketing_consent")
  termsOfServiceAt     DateTime        @map("terms_of_service_at")
  privacyPolicyAt      DateTime        @map("privacy_policy_at")
  marketingConsentAt   DateTime?       @map("marketing_consent_at")

  // 관계 설정
  refreshTokens        RefreshToken[]

  @@map("users")
}

// 리프레시 토큰 테이블
model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  tokenHash String   @map("token_hash")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // 관계 설정
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

