generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// 폴더 테이블
model Folder {
  folderId       String    @id @map("folder_id")
  teamId         String    @map("team_id")
  folderName     String    @map("folder_name")
  parentFolderId String?   @map("parent_folder_id")
  createdAt      String    @map("created_at")
  createdBy      String    @map("created_by")

  // 관계 설정
  parentFolder   Folder?   @relation("FolderHierarchy", fields: [parentFolderId], references: [folderId], onDelete: Cascade)
  subfolders     Folder[]  @relation("FolderHierarchy")
  links          Link[]

  @@index([teamId])
  @@index([parentFolderId])
  @@map("folders")
}

// 링크 테이블
model Link {
  linkId    String  @id @map("link_id")
  teamId    String  @map("team_id")
  url       String
  title     String
  tags      String  // JSON 문자열로 저장
  summary   String
  createdAt String  @map("created_at")
  createdBy String  @map("created_by")
  folderId  String? @map("folder_id")

  // 관계 설정
  folder    Folder? @relation(fields: [folderId], references: [folderId], onDelete: SetNull)

  @@index([teamId])
  @@index([createdAt])
  @@index([folderId])
  @@map("links")
}

// 회원 테이블
model User {
  id                   Int             @id @default(autoincrement())
  uuid                 String          @unique @map("uuid")
  email                String          @unique
  emailVerified        Boolean         @default(false) @map("email_verified")
  nickname             String
  passwordHash         String          @map("password_hash")
  createdAt            DateTime        @default(now()) @map("created_at")
  updatedAt            DateTime        @updatedAt @map("updated_at")
  deletedAt            DateTime?       @map("deleted_at")
  termsOfService       Boolean         @map("terms_of_service")
  privacyPolicy        Boolean         @map("privacy_policy")
  marketingConsent     Boolean         @map("marketing_consent")
  termsOfServiceAt     DateTime        @map("terms_of_service_at")
  privacyPolicyAt      DateTime        @map("privacy_policy_at")
  marketingConsentAt   DateTime?       @map("marketing_consent_at")

  // 관계 설정
  refreshTokens        RefreshToken[]

  @@map("users")
}

// 리프레시 토큰 테이블
model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  tokenHash String   @map("token_hash")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  // 관계 설정
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// OAuth 클라이언트 테이블
// 익스텐션, 외부 플러그인 등 OAuth를 사용하는 애플리케이션 정보
model OAuthClient {
  id                      String   @id // client_id로 사용
  clientSecret            String?  @map("client_secret") // public client는 null
  clientName              String   @map("client_name")
  redirectUris            String   @map("redirect_uris") // JSON 배열로 저장 (SQLite는 배열 타입 없음)
  grantTypes              String   @map("grant_types") // JSON 배열: ["authorization_code", "refresh_token"]
  responseTypes           String   @map("response_types") // JSON 배열: ["code"]
  scopes                  String   // JSON 배열: ["openid", "profile", "links:read", "links:write", ...]
  tokenEndpointAuthMethod String   @default("none") @map("token_endpoint_auth_method") // "none" for public clients
  applicationType         String   @default("web") @map("application_type") // "web" or "native"
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  @@map("oauth_clients")
}

model OidcEntity {
  id        String   @id
  type      String   // AuthorizationCode, RefreshToken, Session, Grant, Interaction 등
  payload   Json     // oidc-provider가 준 객체 그대로
  expiresAt DateTime?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([expiresAt])
  @@map("oidc_entities")
}