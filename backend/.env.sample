# 서버 설정
NODE_ENV=development
PORT=3000

# 데이터베이스 설정
DATABASE_URL="file:./data/team_stash.db"

# JWT 설정 (초 단위)
JWT_ACCESS_SECRET=your_jwt_access_secret
JWT_ACCESS_EXP_SEC=3600 # 1시간 (60s * 60m)

JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_REFRESH_EXP_SEC=2592000 # 30일 (60s * 60m * 24h * 30d)

# Clova Studio AI 설정
CLOVA_STUDIO_API_URL=https://clovastudio.stream.ntruss.com/v1/chat-completions/HCX-003
CLOVA_STUDIO_API_KEY=your_clova_studio_api_key
AI_PASSWORD=your_ai_password

# Notification 설정
N8N_WEBHOOK_URL=your_n8n_webhook_url
NOTIFICATION_ENABLED=true

# OAuth 2.0 / OIDC 설정
OAUTH_ISSUER=http://localhost:3000/oauth

# === OIDC 상세 설정 ===

# 쿠키 서명용 시크릿 (쉼표로 구분, 최소 32자 이상)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 여러 개인 이유: 키 로테이션 시 기존 세션 유지 (첫 번째=서명용, 나머지=검증용)
OIDC_COOKIE_KEYS="your_cookie_secret_1,your_cookie_secret_2"

# JWT 서명용 RSA 키 (JSON 문자열 - 한 줄로, 주석 없이)
# 생성 방법:
# node -e "
# const { generateKeyPairSync } = require('crypto');
# const { privateKey } = generateKeyPairSync('rsa', { modulusLength: 2048 });
# const jwk = privateKey.export({ format: 'jwk' });
# jwk.kid = 'key-1'; jwk.use = 'sig'; jwk.alg = 'RS256';
# console.log(JSON.stringify({ keys: [jwk] }));
# "
OIDC_JWKS='{"keys":[{"kty":"RSA","kid":"key-1",...생성된_키_붙여넣기...}]}'

# 리소스 서버 URL (백엔드 API 주소)
OIDC_RESOURCE_SERVER=http://localhost:3000

# 클라이언트 리다이렉트 URI (쉼표로 구분)
OIDC_REDIRECT_URIS=http://localhost:3000/auth/callback,https://localhost:3000/auth/callback
