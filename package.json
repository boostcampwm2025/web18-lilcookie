{
  "name": "web18-lilcookie",
  "version": "1.0.0",
  "description": "URL 원클릭 저장 기획 사용자 테스트를 위한 프로토타입",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm && corepack enable",
    "start:dev": "concurrently \"pnpm --filter backend start:dev\" \"pnpm --filter frontend dev\" \"pnpm --filter extension-wxt dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "docker:dev:up": "docker compose --env-file infra/docker/.env.development.local -f infra/docker/compose.dev.yaml up -d",
    "docker:dev:down": "docker compose --env-file infra/docker/.env.development.local -f infra/docker/compose.dev.yaml down",
    "docker:dev:logs": "docker compose --env-file infra/docker/.env.development.local -f infra/docker/compose.dev.yaml logs -f",
    "docker:prod:up": "docker compose -f infra/docker/compose.yaml up --build -d",
    "docker:prod:down": "docker compose -f infra/docker/compose.yaml down",
    "docker:prod:logs": "docker compose -f infra/docker/compose.yaml logs -f",
    "docker:clean": "docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48"
}
